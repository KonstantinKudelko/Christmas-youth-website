{
  "kind": "collectionType",
  "connection": "default",
  "collectionName": "author",
  "info": {
    "name": "Author"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "first_name": {
      "type": "string"
    },
    "last_name": {
      "type": "string"
    },
    "facebook_url": {
      "type": "string"
    },
    "instagram_url": {
      "type": "string"
    },
    "linkedin_url": {
      "type": "string"
    },
    "description": {
      "type": "richtext"
    },
    "avatar": {
      "model": "file",
      "via": "related",
      "plugin": "upload",
      "required": false
    },
    "articles": {
      "collection": "article",
      "via": "author"
    }
  }
}
